# JAC IRC Proxy Configuration
# Copy this file to .env and customize as needed

# WebSocket gateway URL (default: JAC production gateway)
# WS_URL=wss://hliytlezggzryetekpvo.supabase.co/functions/v1/irc-gateway

# Host to bind to
# - 127.0.0.1 = localhost only (default)
# - 0.0.0.0 = all interfaces (for VPS/public hosting)
HOST=0.0.0.0

# TCP port (default: 6667)
PORT=6667

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_PORT=6697
SSL_CERT=/path/to/fullchain.pem
SSL_KEY=/path/to/privkey.pem
# SSL_CA=/path/to/chain.pem  # Optional CA bundle

# Logging level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Admin API
# NOTE: If you will access the Admin API from an HTTPS website, set ADMIN_SSL_ENABLED=true
# and use an https:// domain that matches the certificate (IP addresses won't validate).
ADMIN_PORT=6680
ADMIN_SSL_ENABLED=false
ADMIN_TOKEN=your-secure-token-here
